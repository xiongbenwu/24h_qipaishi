.container {
  padding: 30rpx;
  height: 100vh;
  background-color: #ffffff;
}

.store-info {
  display: flex;
  height: 100rpx;
  border-radius: 10rpx;
  justify-content: space-between;
}

.store-info text {
  margin: auto 0;
  margin-left: 30rpx;
}

.xian {
  margin-top: 20rpx;
  width: 100%;
  background-color: rgba(86, 87, 87, 0.205);
  height: 1rpx;
}

.productInfo {
  display: flex;
  width: 100%;
  height: 100%;
  margin-top: 20rpx;
}

.image {
  width: 15%;
  height: 100%;
}

.attrs {
  width: 30%;
  margin-left: 20rpx;
}

.attrs view {
  display: flex;
  height: 50%;
}

.price-num {
  display: flex;
  width: 55%;
  justify-content: center;
  margin: auto 0;
}

.product-price {
  width: 200rpx;
}

.showmore {
  display: flex;
  text-align: center;
  justify-content: center;
}

.info {
  display: flex;
  justify-content: space-between;
  margin-top: 20rpx;
}

.status-css {
  display: flex;
  margin: auto 0;
  font-size: 30rpx;
  font-weight: 550;
  width: 140rpx;
  height: 60rpx;
  border-radius: 100rpx;
}

.wait {
  background-color: rgb(248, 203, 4);
  color: #fff;
}

.send {
  background-color: rgb(113, 188, 250);
  color: #fff;
}

.end {
  background-color: rgb(129, 250, 113);
  color: #fff;
}

.cancel {
  background-color: rgb(83, 87, 87, 0.2);
  color: #fff;
}