page {
  background: #f5f5f5;
}

.container {
  /* padding: 40px 16rpx 120rpx 16rpx; */
}

.container .info {
  font-size: 32rpx;
  background-image: radial-gradient(circle 248px at center, #16d9e3 0%, #30c7ec 47%, #46aef7 100%);
  margin: 10rpx 20rpx;
  border-radius: 10rpx;
  padding: 10rpx;
  color: rgb(255, 255, 255);
  font-weight: 600;
}

.container .text {
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 30rpx;
  text-align: center;
  font-weight: 600;
}

.container .info .line {
  margin-bottom: 10rpx;
}

.container .form {
  margin-top: 50rpx;
  align-items: center;
  display: flex;
}

.container .form .btn {
  align-items: center;
  width: 300rpx;
  background-color: #108ee9;
  color: #fff;
  font-size: 32rpx;
  height: 50rpx;
  line-height: 50rpx;
  border-radius: 10rpx;
  margin: 20rpx auto;
  padding: 10rpx;
  text-align: center;
  font-weight: 600;
}

.container .list {
  overflow-y: auto;
  /* height: 300rpx; */
  max-height: 630rpx;
  padding: 10rpx 30rpx;
  margin: 20rpx;
  border-radius: 20rpx;
  background-image: linear-gradient(135deg, #c0d7fa 0%, #c3cfe2 100%);
}

.container .list .item {
  margin: 20rpx 10rpx;
  font-size: 30rpx;
}

.container .list .item .lock {
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 28rpx;
  font-weight: 600;
  line-height: 32rpx;
  margin: 20rpx 20rpx;
  height: 32rpx;
  text-align: center;
}